<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="#FAFAFA">

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_300sdp"
        style="?android:attr/progressBarStyle"/>

    <ImageView
        android:id="@+id/iv_login"
        android:layout_width="306dp"
        android:layout_height="366dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_110sdp"
        android:contentDescription="@string/iv_hijab"
        android:src="@drawable/hijab" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_370sdp"
        android:backgroundTint="#DA6363"
        android:text="@string/txt_btn_login"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="@dimen/_13ssp"/>

</RelativeLayout>